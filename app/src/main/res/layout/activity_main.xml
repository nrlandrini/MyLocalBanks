<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/box" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="147dp"
                android:layout_height="71dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/bank" />

            <TextView
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/banks"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="#4B83A6" />

    <LinearLayout
        android:id="@+id/font"
        android:layout_width="243dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dbs"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/dbs" />

        <TextView
            android:id="@+id/tvDBS"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/andada"
            android:text="@string/dbs"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#4B83A6" />

    <LinearLayout
        android:layout_width="244dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ocbc"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ocbc" />

        <TextView
            android:id="@+id/tvOCBC"
            android:layout_width="109dp"
            android:layout_height="51dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:fontFamily="@font/andada"
            android:text="@string/ocbc"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#4B83A6" />

    <LinearLayout
        android:layout_width="244dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:layout_marginBottom="14dp">

        <ImageView
            android:id="@+id/uob"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/uob" />

        <TextView
            android:id="@+id/tvUOB"
            android:layout_width="109dp"
            android:layout_height="51dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:fontFamily="@font/andada"
            android:text="@string/uob"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="#4B83A6" />

</LinearLayout>

